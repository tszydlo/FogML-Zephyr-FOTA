<LWM2M xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://openmobilealliance.org/tech/profiles/LWM2M.xsd">
    <Object ObjectType="MODefinition">
        <Name>Classifier</Name>
        <Description1><![CDATA[This object is used to report the results of the ML-based classification algorithm.]]></Description1>
        <ObjectID>33652</ObjectID>
        <ObjectURN>urn:oma:lwm2m:ext:33652</ObjectURN>
        <LWM2MVersion>1.0</LWM2MVersion>
        <ObjectVersion>1.0</ObjectVersion>
        <MultipleInstances>Single</MultipleInstances>
        <Mandatory>Optional</Mandatory>
        <Resources>
            <Item ID="2000">
                <Name>Class Labels</Name>
                <Operations>R</Operations>
                <MultipleInstances>Multiple</MultipleInstances>
                <Mandatory>Mandatory</Mandatory>
                <Type>String</Type>
                <RangeEnumeration></RangeEnumeration>
                <Units></Units>
                <Description><![CDATA[The labels of the classes that classifier is able to classify.]]></Description>
            </Item><Item ID="2001">
                <Name>Classification Output</Name>
                <Operations>R</Operations>
                <MultipleInstances>Multiple</MultipleInstances>
                <Mandatory>Mandatory</Mandatory>
                <Type>Float</Type>
                <RangeEnumeration></RangeEnumeration>
                <Units></Units>
                <Description><![CDATA[The output of the classifier.]]></Description>
            </Item>
            
			<Item ID="2002">
				<Name>Anomaly Output</Name>
				<Operations>R</Operations>
				<MultipleInstances>Single</MultipleInstances>
				<Mandatory>Optional</Mandatory>
				<Type>Float</Type>
				<RangeEnumeration></RangeEnumeration>
				<Units></Units>
				<Description><![CDATA[Anomaly value of the classifier input data.]]></Description>
			</Item>
			
			
            
         </Resources>
        <Description2></Description2>
    </Object>
</LWM2M>
